{
  "name": "promptguard-vscode",
  "displayName": "PromptGuard",
  "description": "Plug-and-play LLM security for your AI applications",
  "version": "0.3.0",
  "publisher": "promptguard",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Other",
    "Linters"
  ],
  "keywords": [
    "llm",
    "cybersecurity",
    "firewall",
    "jailbreak",
    "pii-detection",
    "data-leakage",
    "data-exfiltration",
    "dlp",
    "security",
    "openai",
    "anthropic",
    "cohere",
    "aws-bedrock",
    "gemini",
    "prompt-injection",
    "ai-security"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptguard",
          "title": "PromptGuard",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "promptguard": [
        {
          "id": "promptguard.managedFiles",
          "name": "PromptGuard",
          "icon": "$(shield)",
          "contextualTitle": "PromptGuard"
        }
      ]
    },
    "commands": [
      {
        "command": "promptguard.init",
        "title": "PromptGuard: Initialize",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.scan",
        "title": "PromptGuard: Scan for LLM SDKs",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.status",
        "title": "PromptGuard: Show Status",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.apply",
        "title": "PromptGuard: Apply Transformations",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.disable",
        "title": "PromptGuard: Disable",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.enable",
        "title": "PromptGuard: Enable",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.scanSelection",
        "title": "PromptGuard: Scan Selection for Threats",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.redactSelection",
        "title": "PromptGuard: Redact PII from Selection",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.scanFile",
        "title": "PromptGuard: Scan File for Threats",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.setApiKey",
        "title": "PromptGuard: Set API Key",
        "category": "PromptGuard"
      },
      {
        "command": "promptguard.refreshTree",
        "title": "PromptGuard: Refresh",
        "category": "PromptGuard",
        "icon": "$(refresh)"
      },
      {
        "command": "promptguard.installCli",
        "title": "PromptGuard: Install/Update CLI",
        "category": "PromptGuard"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "promptguard.scanSelection",
          "when": "editorHasSelection",
          "group": "promptguard@1"
        },
        {
          "command": "promptguard.redactSelection",
          "when": "editorHasSelection",
          "group": "promptguard@2"
        }
      ],
      "explorer/context": [
        {
          "command": "promptguard.scanFile",
          "when": "resourceLangId == typescript || resourceLangId == javascript || resourceLangId == python",
          "group": "promptguard@1"
        }
      ]
    },
    "configuration": {
      "title": "PromptGuard",
      "properties": {
        "promptguard.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to the PromptGuard CLI binary. Leave empty to auto-detect from PATH."
        },
        "promptguard.apiKey": {
          "type": "string",
          "default": "",
          "description": "PromptGuard API key. Stored securely in VS Code secrets.",
          "markdownDescription": "PromptGuard API key. For security, this is stored in VS Code's secure secret storage."
        }
      }
    },
    "languages": [
      {
        "id": "typescript",
        "extensions": [
          ".ts",
          ".tsx"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx"
        ]
      },
      {
        "id": "python",
        "extensions": [
          ".py"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/acebot712/promptguard-vscode"
  },
  "license": "Apache-2.0"
}
